<h1>Create a new Series</h1>

<%= form_with model: @this_series do |form| %>
  <div class="form-group">
    <%= form.label :team1, "Higher Seed" %>
    <%= collection_select(:series, :team1_id, Team.all, :id, :name) %>
  </div>
  <div class="form-group">
    <%= form.label :team2, "Lower Seed" %>
    <%= collection_select(:series, :team2_id, Team.all, :id, :name) %>
  </div>
  <div class="form-group">
    <%= form.label :round, "Round" %>
    <%= collection_select(:series, :round_id, Round.all, :id, :fancy_name) %>
  </div>
  <% if flash[:errors] %>
    <ul class="error">
      <% flash[:errors].each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <%= form.submit "Create Series", class: "btn btn-primary" %>
<% end %>