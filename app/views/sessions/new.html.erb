
<!-- Placeholder div to make space for the navbar (which is a position: absolute) -->
<div class="placeholder"></div>
<h1>Login Page</h1>
<div class="well">
  <%= link_to 'Don\'t have an account? Sign Up', new_user_path, class: "btn btn-info" %>
</div>
<%= form_with url: login_submit_path do |form| %>
  <div class="form-group">
    <%= form.label :email, "Email" %>
    <%= form.email_field :email, class: "form-control", value: flash[:original_email] %>
  </div>
  <div class="form-group">
    <%= form.label :password, "Password" %>
    <%= form.password_field :password, class: "form-control" %>
  </div>
  <% if flash[:error] %>
    <div class="error"><%= flash[:error] %></div>
  <% end %>
  <%= form.submit "Submit" %>
<% end %>
